#!/bin/sh

# lh(1) - generic live-helper wrapper
# Copyright (C) 2006-2010 Daniel Baumann <daniel@debian.org>
#
# live-helper comes with ABSOLUTELY NO WARRANTY; for details see COPYING.
# This is free software, and you are welcome to redistribute it
# under certain conditions; see COPYING for details.

set -e

# Including common functions
. "${LH_BASE:-/usr/share/live-helper}"/scripts/build.sh

# Setting static variables
DESCRIPTION="$(Echo 'Utilidad para generar medios vivos para Canaima GNU/Linux e instalar sabores de la metadistribución.')"
HELP="FIXME"
USAGE="FIXME"

case "${1}" in
	--ayuda)
		if [ -x "$(which man 2>/dev/null)" ]
		then
			man canaima-semilla
			exit 0
		else
		        Echo "Canaima Semilla es una utilidad que permite generar medios vivos para Canaima GNU/Linux e instalar sabores de la metadistribución."
		        echo
		        Echo "Se le brinda a el usuario la opción de escoger la arquitectura (i386, amd64) y el medio a utilizar (USB, CD o DVD)."
		        echo
			exit 0
		fi
		;;

	""|-u|--uso)
		Usage
		;;

	-v|--version)
		Version
		;;

	*)
		COMMAND="${1}"
		shift

		if [ -x "${LH_BASE}/scripts/build/${COMMAND}" ]
		then
			LH=1 exec "${LH_BASE}/scripts/build/${COMMAND}" "${@}"
		elif [ -x /usr/share/live-helper/scripts/build/${COMMAND} ]
		then
			LH=1 exec /usr/share/live-helper/scripts/build/"${COMMAND}" "${@}"
		elif [ -x "$(which ${COMMAND} 2>/dev/null)" ]
		then
			LH=1 exec "${COMMAND}" "${@}"
		else
			Echo_error "Comando no existente. El manual de canaima-semilla es un buen lugar para buscar (man canaima-semilla)."
			exit 1
		fi
		;;
esac
