#!/bin/sh

# lh_build(1) - build a Debian Live system
# Copyright (C) 2006-2010 Daniel Baumann <daniel@debian.org>
#
# live-helper comes with ABSOLUTELY NO WARRANTY; for details see COPYING.
# This is free software, and you are welcome to redistribute it
# under certain conditions; see COPYING for details.

set -e

# Including common functions
. "${LH_BASE:-/usr/share/canaima-semilla}"/scripts/build.sh

# Automatically populating config tree
if [ -x auto/config ] && [ ! -e .stage/config ]
then

	Echo_message "Se te olvid칩 configurar la semilla. Canaima lo har치 por ti, pero pueden haber resultados inesperados."

	canaima-semilla configurar
fi

# Read meta config
if [ "${1}" != "noauto" ] && [ -x auto/build ]
then
	Echo_message "Executing auto/build script."
	./auto/build ${@}
fi

if [ "${1}" = "noauto" ]
then
	shift
fi

# Setting static variables
DESCRIPTION="$(Echo 'build a Debian Live system')"
HELP=""
USAGE="${PROGRAM} [--force]"

Arguments "${@}"

if [ ! -d config ]
then
	Echo_warning "Canaima Semilla no encuentra el directorio de configuraci칩n, usaremos las opciones por defecto."
fi

if [ "$(pwd)" = "/" ]
then

	Echo_error "Canaima Semilla no puede construirse en el directorio base unix."

	exit 1
fi

if echo $(pwd) | grep -qs " "
then

	Echo_error "Canaima Semilla no puede generarse en un directorio que contenga espacios en su nombre."

	exit 1
fi

# Reading configuration files
Read_conffiles config/all config/common config/bootstrap config/chroot config/binary config/source
Set_defaults

# Checking defaults
Check_defaults

Echo_message "Comenzando construcci칩n del medio vivo..."

# Bootstrapping system
canaima-semilla bootstrap ${*}

# Customizing chroot
canaima-semilla chroot ${*}

# Building binary images
canaima-semilla binary ${*}

# Building source images
canaima-semilla source ${*}
