#!/bin/sh

# canaima-semilla-instalar(1) - instala sabores de Canaima GNU/Linux

set -e

# Including common functions
. "${LH_BASE:-/usr/share/canaima-semilla}"/scripts/build.sh

# Setting static variables
DESCRIPTION="$(Echo 'instala sabores de Canaima GNU/Linux')"
HELP=""
USAGE="${PROGRAM} [--sabor]"

if [ -z "${*}" ]
then
	ARGUMENTS="--predeterminado"
	echo "No especificaste un sabor de Canaima GNU/Linux, se instalará la Metadistribución versión mínima por defecto"
else
	ARGUMENTS="${1}"
fi

for ARGUMENT in ${ARGUMENTS}
do
	case "${ARGUMENT}" in
		--predeterminado)
			LH_SABOR="meta-minimal"
			;;

		--sabor)
			LH_SABOR="${2}"
			;;
	esac
done

	case "${LH_SABOR}" in
                meta-minimal)
                        case "${LH_ARCHITECTURE}" in
                                i386)
                                        LH_PACKAGES_LISTS="meta-minimal-i386"
                                        ;;
                                amd64)
                                        LH_PACKAGES_LISTS="meta-minimal-amd64"
                                        ;;
                        esac
                        ;;
                meta-cd)
                        case "${LH_ARCHITECTURE}" in
                                i386)
                                        LH_PACKAGES_LISTS="meta-cd-i386"
                                        ;;
                                amd64)
                                        LH_PACKAGES_LISTS="meta-cd-amd64"
                                        ;;
                        esac
                        ;;

                meta-dvd)
                        case "${LH_ARCHITECTURE}" in
                                i386)
                                        LH_PACKAGES_LISTS="meta-dvd-i386"
                                        ;;
                                amd64)
                                        LH_PACKAGES_LISTS="meta-dvd-amd64"
                                        ;;
                        esac
                        ;;

                universitario)
                        case "${LH_ARCHITECTURE}" in
                                i386)
                                        LH_PACKAGES_LISTS="universitario-i386"
                                        ;;
                                amd64)
                                        LH_PACKAGES_LISTS="universitario-amd64"
                                        ;;
                        esac
                        ;;

                forense)
                        case "${LH_ARCHITECTURE}" in
                                i386)
                                        LH_PACKAGES_LISTS="forense-i386"
                                        ;;
                                amd64)
                                        LH_PACKAGES_LISTS="forense-amd64"
                                        ;;
                        esac
                        ;;

                educativo)
                        case "${LH_ARCHITECTURE}" in
                                i386)
                                        LH_PACKAGES_LISTS="educativo-i386"
                                        ;;
                                amd64)
                                        LH_PACKAGES_LISTS="educativo-amd64"
                                        ;;
                        esac
                        ;;

                colibri)
                        case "${LH_ARCHITECTURE}" in
                                i386)
                                        LH_PACKAGES_LISTS="colibri-i386"
                                        ;;
                                amd64)
                                        LH_PACKAGES_LISTS="colibri-amd64"
                                        ;;
                        esac
                        ;;

                apn)
                        case "${LH_ARCHITECTURE}" in
                                i386)
                                        LH_PACKAGES_LISTS="apn-i386"
                                        ;;
                                amd64)
                                        LH_PACKAGES_LISTS="apn-amd64"
                                        ;;
                        esac
                        ;;

        esac

apt-get install {$LH_PACKAGES_LISTS}
